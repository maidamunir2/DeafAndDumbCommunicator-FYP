<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamFragment"

    android:id="@+id/Cam_fragment"
    android:background="@drawable/signin_background">

  <androidx.core.widget.NestedScrollView
      android:id="@+id/mainScroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/Txt_header"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginStart="5dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="5dp"
          android:drawablePadding="10dp"

          android:ems="10"
          android:paddingStart="10dp"
          android:paddingLeft="20dp"
          android:paddingTop="5dp"
          android:paddingRight="10dp"
          android:paddingBottom="10dp"
          android:text="Add Picture of Your Own Choice"
          android:textColor="@color/GreenText"
          android:textColorHint="@color/TextColor"
          android:textSize="25dp" />

      <ImageView

          android:id="@+id/Image_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/Txt_header"
          android:layout_centerHorizontal="true"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="5dp"
          android:drawablePadding="10dp"
          android:paddingStart="10dp"
          android:paddingLeft="20dp"
          android:paddingTop="10dp"
          android:paddingRight="10dp"
          android:paddingBottom="10dp"
          android:src="@drawable/ic_launcher_background" />


      <Button
          android:id="@+id/OpenCamera"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/Image_view"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/button_bg"

          android:text="Take Picture"
          android:textColor="@color/TextColor" />

      <Button
          android:id="@+id/OpenGallery"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/OpenCamera"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/button_bg"
          android:text="Open Gallery"

          android:textColor="@color/TextColor"
          android:textCursorDrawable="@color/edenGreen" />

      <Button
          android:id="@+id/btn_save"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/OpenGallery"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:background="@drawable/button_bg"
          android:enabled="false"

          android:text="Save Image"
          android:textColor="@color/TextColor" />
    </RelativeLayout>
  </androidx.core.widget.NestedScrollView>
</RelativeLayout>
